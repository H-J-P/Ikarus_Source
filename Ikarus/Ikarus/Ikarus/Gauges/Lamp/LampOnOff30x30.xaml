<UserControl x:Class="Ikarus.LampOnOff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30" MouseWheel="Light_MouseWheel">
    <Grid>
        <Image x:Name="LampOn" Height="30" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30" MouseWheel="Light_MouseWheel" OpacityMask="Black"/>
        <Image x:Name="LampOff" HorizontalAlignment="Left" Height="30" Margin="0,0,0,0" VerticalAlignment="Top" Width="30"  MouseWheel="Light_MouseWheel"/>
        <Rectangle x:Name="UpperRec" Fill="#00EEDB21" HorizontalAlignment="Left" Height="30" Stroke="#00000000" VerticalAlignment="Top" Width="30" MouseDown="UpperRec_MouseDown" TouchDown="UpperRec_TouchDown" Margin="0,0,0,0"/>
        <Rectangle x:Name="DesignFrame" Fill="#00EEDB21" HorizontalAlignment="Left" Height="30" Width="30" Margin="0,0,0,0" Stroke="#FFF38501" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
