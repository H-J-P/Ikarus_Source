<UserControl x:Class="Ikarus.Monitor7Segment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="54"
             Height="64"
             MouseWheel="Light_MouseWheel"
             RenderTransformOrigin="0.5,0.5"
             mc:Ignorable="d">
    <Grid x:Name="MonitorGrid" Margin="0,0,0,0">
        <Image x:Name="Frame"
               Width="54"
               Height="64"
               Margin="0,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               MouseWheel="Light_MouseWheel"
               Stretch="Fill" />
        <TextBlock x:Name="Line1"
                   Width="10.1"
                   Height="18"
                   Margin="22,22,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Background="#00071901"
                   FontFamily="Digital-7 Mono"
                   FontSize="22"
                   Foreground="#FF95E295"
                   Text="0"
                   Visibility="Collapsed" />
        <TextBlock x:Name="Line2"
                   Width="13"
                   Height="18"
                   Margin="22,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Background="#00071901"
                   FontFamily="Courier New"
                   FontSize="21"
                   Foreground="#FF95E205"
                   Text="0"
                   Visibility="Collapsed" />
        <Image x:Name="Light"
               Width="54"
               Height="64"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               MouseWheel="Light_MouseWheel"
               Stretch="Fill" />
        <Rectangle x:Name="DesignFrame"
            Width="54"
            Height="64"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#00EEDB21"
            Stroke="#FFF38501" />
    </Grid>
</UserControl>
