<UserControl x:Class="Ikarus.RotaryWithPosition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="100"
             d:DesignWidth="100"
             MouseWheel="Light_MouseWheel"
             mc:Ignorable="d">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform Angle="0" />
                <TranslateTransform />
            </TransformGroup>
        </Grid.RenderTransform>
        <Image x:Name="SwitchBase"
               Width="100"
               Height="100"
               Margin="0,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <Image x:Name="SwitchKnob"
               Width="100"
               Height="100"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.5,0.5" />
       <Rectangle x:Name="DesignFrame"
                   Width="100"
                   Height="100"
                   Margin="0,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="#00EEDB21"
                   Stroke="#FFF38501"
                   StrokeThickness="3" />
        <Rectangle x:Name="RightRec"
                   Width="40"
                   Height="90"
                   Margin="55,5,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="#00EEDB21"
                   MouseDown="RightRec_MouseDown"
                   Stroke="#00000000"
                   TouchDown="RightRec_TouchDown" />
        <Rectangle x:Name="LeftRec"
                   Width="40"
                   Height="90"
                   Margin="5,5,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="#00EEDB21"
                   MouseDown="LeftRec_MouseDown"
                   Stroke="#00000000"
                   TouchDown="LeftRec_TouchDown" />
    </Grid>
</UserControl>
